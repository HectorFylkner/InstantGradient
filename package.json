{
  "name": "gradient-tool-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "A modern gradient tool built with React, Tailwind, and OKLab color spaces.",
  "packageManager": "pnpm@9.1.4",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
