    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "prettier": "^3.2.5",
    "turbo": "^2.0.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
